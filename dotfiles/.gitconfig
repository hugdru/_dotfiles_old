[user]
  email = hugo.drumond@fe.up.pt
  name = Hugo Drumond
[push]
  default = simple
[core]
  editor = nvim
	pager = diff-so-fancy | less
  whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol
[color]
  branch = auto
  diff = auto
  grep = auto
  interactive = auto
  pager = true
  showBranch = auto
  status = auto
  ui = auto
[merge]
  tool = vimdiff
[mergetool]
  prompt = true
	keepBackup = false
[mergetool "vimdiff"]
  cmd = nvim -d $BASE $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
